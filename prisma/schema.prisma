generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String    @id @default(uuid())
  cod         String    @unique
  name        String
  description String
  imageUrl    String
  price       Float
  available   Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?

  @@map("products")
}
